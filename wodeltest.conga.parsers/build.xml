<?xml version="1.0" encoding="UTF-8"?>
<project name="wodeltest.conga.parsers" default="build.jars" basedir=".">

	<property name="p2.build.repo" value="file:${buildDirectory}/buildRepo"/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="bundleId" value="wodeltest.conga.parsers"/>
	<property name="bundleVersion" value="1.0.0"/>
	<property name="p2.publishonerror" value="false"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="compilation.prereq.log" value="${buildDirectory}/prereqErrors.log"/>
	<property name="javacSource" value="1.8"/>
	<property name="javacTarget" value="1.8"/>
	<condition property="dir_bootclasspath" value="${java.home}/../Classes">
		<and>
			<os family="mac"/>
			<available file="${java.home}/../Classes" type="dir"/>
		</and>
	</condition>
	<property name="dir_bootclasspath" value="${java.home}/lib"/>
	<path id="path_bootclasspath">
		<fileset dir="${dir_bootclasspath}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<condition property="bundleBootClasspath" value="${JavaSE-11}"	>
		<isset property="JavaSE-11"/>
	</condition>
	<condition property="bundleJavacSource" value="11"	>
		<isset property="JavaSE-11"/>
	</condition>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>

	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/wodeltest.conga.parsers_1.0.0"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<condition property="p2.publish.parts" value="true"		>
			<istrue value="${p2.gathering}"/>
		</condition>
		<property name="compilation.problem.marker" value="${build.result.folder}/compilation.problem"/>
		<condition property="compilation.problem.marker.exists" value="true"		>
			<and>
			<available file="${compilation.problem.marker}"/>
			<isfalse value="${p2.publishonerror}"/>
			</and>
		</condition>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: wodeltest.conga.parsers for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<jar destfile="${plugin.destination}/wodeltest.conga.parsers_1.0.0.jar" basedir="${temp.folder}/wodeltest.conga.parsers_1.0.0" filesetmanifest="merge"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: wodeltest.conga.parsers.">
		<delete file="${compilation.problem.marker}" quiet="true"/>
	</target>

	<target name="checkCompilationResults" if="compilation.error.occured">
		<echo file="${compilation.problem.marker}" message="wodeltest.conga.parsers_1.0.0${line.separator}compilation.error.occured=${compilation.error.occured}"/>
		<eclipse.logCompileError log="${compilation.prereq.log}" bundle="wodeltest.conga.parsers_1.0.0">
		</eclipse.logCompileError>
	</target>

	<target name="build.sources" depends="init">
	</target>

	<target name="publish.bin.parts" depends="init" if="p2.publish.parts" unless="compilation.problem.marker.exists">
		<mkdir dir="${build.result.folder}/wodeltest.conga.parsers_1.0.0"/>
		<copy todir="${build.result.folder}" failonerror="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="META-INF/MANIFEST.MF"/>
				<include name="plugin.xml"/>
				<include name="fragment.xml"/>
			</fileset>
		</copy>
		<antcall target="apitools.generation">
			<param name="projectLocation" value="${basedir}"/>
			<param name="binary.folders" value="C:\eclipse\workspace\wodeltest.conga.parsers/winp-1.28.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-dataformat-xml-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-databind-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/woodstox-core-6.5.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/json-20230618.jar;C:\eclipse\workspace\wodeltest.conga.parsers/CONGA_RasaParsers.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jsoup-1.6.0.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-annotations-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/commonmark-0.17.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/org.eclipse.xtext.xbase.lib_2.32.0.v20230827-1315.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jsr305-3.0.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/snakeyaml-2.0.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-core-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-dataformat-yaml-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/gson-2.10.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/spotbugs-annotations-4.8.0.jar"/>
			<param name="projectName" value="${bundleId}_${bundleVersion}"/>
			<param name="target.folder" value="${build.result.folder}"/>
		</antcall>
		<eclipse.gatherBundle 
		   metadataRepository="${p2.build.repo}"
		   artifactRepository="${p2.build.repo}"
		   buildResultFolder="${build.result.folder}"
		   unpack="true"
		   baseDirectory="${basedir}"
		/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/wodeltest.conga.parsers_1.0.0"/>
		<copy todir="${destination.temp.folder}/wodeltest.conga.parsers_1.0.0" failonerror="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="META-INF/"/>
				<include name="CONGA_RasaParsers.jar"/>
				<include name="commonmark-0.17.1.jar"/>
				<include name="gson-2.10.1.jar"/>
				<include name="jackson-annotations-2.15.2.jar"/>
				<include name="jackson-core-2.15.2.jar"/>
				<include name="jackson-databind-2.15.2.jar"/>
				<include name="jackson-dataformat-xml-2.15.2.jar"/>
				<include name="jackson-dataformat-yaml-2.15.2.jar"/>
				<include name="json-20230618.jar"/>
				<include name="jsoup-1.6.0.jar"/>
				<include name="jsr305-3.0.2.jar"/>
				<include name="org.eclipse.xtext.xbase.lib_2.32.0.v20230827-1315.jar"/>
				<include name="snakeyaml-2.0.jar"/>
				<include name="spotbugs-annotations-4.8.0.jar"/>
				<include name="winp-1.28.jar"/>
				<include name="woodstox-core-6.5.1.jar"/>
			</fileset>
		</copy>
		<antcall target="apitools.generation">
			<param name="projectLocation" value="${basedir}"/>
			<param name="binary.folders" value="C:\eclipse\workspace\wodeltest.conga.parsers/winp-1.28.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-dataformat-xml-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-databind-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/woodstox-core-6.5.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/json-20230618.jar;C:\eclipse\workspace\wodeltest.conga.parsers/CONGA_RasaParsers.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jsoup-1.6.0.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-annotations-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/commonmark-0.17.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/org.eclipse.xtext.xbase.lib_2.32.0.v20230827-1315.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jsr305-3.0.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/snakeyaml-2.0.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-core-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/jackson-dataformat-yaml-2.15.2.jar;C:\eclipse\workspace\wodeltest.conga.parsers/gson-2.10.1.jar;C:\eclipse\workspace\wodeltest.conga.parsers/spotbugs-annotations-4.8.0.jar"/>
			<param name="projectName" value="${bundleId}_${bundleVersion}"/>
			<param name="target.folder" value="${destination.temp.folder}/wodeltest.conga.parsers_1.0.0"/>
		</antcall>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/wodeltest.conga.parsers_1.0.0"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: wodeltest.conga.parsers of all the zips, jars and logs created.">
		<delete file="${plugin.destination}/wodeltest.conga.parsers_1.0.0.jar"/>
		<delete file="${plugin.destination}/wodeltest.conga.parsers_1.0.0.zip"/>
		<delete dir="${temp.folder}"/>
		<delete file="${compilation.problem.marker}" quiet="true"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/eclipse/workspace/wodeltest.conga.parsers" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: wodeltest.conga.parsers.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/wodeltest.conga.parsers_1.0.0.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="apitools.generation" if="generateAPIDescription">
		<apitooling.apigeneration  projectName="${projectName}" project="${projectLocation}" binary="${binary.folders}" target="${target.folder}" extramanifests="${extraManifests}" allownonapiproject="${allowNonApiProject}"		/>
	</target>

</project>
